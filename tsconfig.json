{
   "compilerOptions": {
      "baseUrl": "./src",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "lib": [
         "es5",
         "es6",
         "DOM",
         "ES2017"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "paths": {
         "@/*": [
            "*"
         ],
         "types/*": [
            "types/*"
         ]
      },
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es6",
      "types": [
         "node"
      ]
   }
}